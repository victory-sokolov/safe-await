{
    "name": "@vsokolov/safe-await",
    "type": "module",
    "version": "0.0.1",
    "private": false,
    "description": "Safe await - TypeScript utility to handle async/await errors without try/catch",
    "author": {
        "email": "viktorsokolov.and@gmail.com",
        "name": "Viktor Sokolov"
    },
    "license": "MIT",
    "homepage": "https://github.com/victory-sokolov/safe-await#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/victory-sokolov/safe-await.git"
    },
    "bugs": {
        "url": "https://github.com/victory-sokolov/safe-await/issues"
    },
    "keywords": [
        "safe-await",
        "typescript",
        "async/await",
        "axios",
        "fetch",
        "undici"
    ],
    "sideEffects": false,
    "exports": {
        ".": {
            "source": "./src/index.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "files": [
        "dist/*"
    ],
    "scripts": {
        "build": "rollup -c",
        "test": "vitest watch --changed",
        "test:no-watch": "vitest run",
        "test:coverage": "vitest run --coverage",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "prepublishOnly": "pnpm run lint && pnpm test:no-watch",
        "preversion": "pnpm run lint && pnpm test:no-watch",
        "version": "pnpm run lint && git add -A src",
        "postversion": "git push && git push --tags",
        "typecheck": "tsc --pretty",
        "clean": "rimraf ./node_modules && rimraf dist",
        "commit": "cz",
        "semantic-release": "semantic-release",
        "prepare": "husky || true",
        "prepush": "git pull --rebase"
    },
    "dependencies": {
        "axios": "1.12.2",
        "undici": "7.16.0"
    },
    "devDependencies": {
        "@antfu/eslint-config": "^5.4.1",
        "@rollup/plugin-alias": "^5.1.1",
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@semantic-release/changelog": "^6.0.3",
        "@semantic-release/git": "10.0.1",
        "@types/node": "^24.5.2",
        "@typescript-eslint/eslint-plugin": "^8.44.1",
        "@vitest/coverage-v8": "3.2.4",
        "c8": "^10.1.3",
        "commitizen": "^4.3.1",
        "cz-conventional-changelog": "^3.3.0",
        "eslint": "^9.36.0",
        "eslint-plugin-vitest": "^0.5.4",
        "esno": "4.8.0",
        "husky": "9.1.7",
        "lint-staged": "16.2.1",
        "rollup": "^4.52.2",
        "rollup-plugin-dts": "^6.2.3",
        "rollup-plugin-esbuild": "^6.2.1",
        "semantic-release": "^24.2.9",
        "typedoc-plugin-missing-exports": "^4.1.0",
        "typescript": "^5.9.2",
        "typescript-eslint": "^8.44.1",
        "vite": "^7.1.7",
        "vitest": "^3.2.4"
    },
    "husky": {
        "hooks": {
            "pre-push": "pnpm run prepush",
            "pre-commit": "pnpm lint",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "lint-staged": {
        "src/**/*.{ts,tsx}": [
            "pnpm typecheck",
            "pnpm lint"
        ]
    },
    "publishConfig": {
        "access": "public"
    }
}
